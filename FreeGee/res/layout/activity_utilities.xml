<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

        <Button
            android:id="@+id/efsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/efs_text" />

        <Button
            android:id="@+id/DbBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/efsBtn"
            android:layout_marginTop="144dp"
            android:text="@string/dbbtntxt"
            android:visibility="invisible" />

        <Button
            android:id="@+id/miscBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/efsBtn"
            android:layout_marginTop="37dp"
            android:text="@string/miscBtnTxt" />
        
     <com.google.ads.AdView
         android:id="@+id/adView_util"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignParentLeft="true"
         android:layout_alignParentRight="true"
         ads:adSize="SMART_BANNER"
         ads:adUnitId="ca-app-pub-3002935119119150/3959509489"
         ads:loadAdOnCreate="false"
         ads:testDevices="TEST_EMULATOR, TEST_DEVICE_ID" >

     </com.google.ads.AdView>

</RelativeLayout>